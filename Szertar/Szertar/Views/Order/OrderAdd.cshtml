@model Szertar.Dal.Dto.OrderDetails

@{
	ViewData["Title"] = "Foglalás";
}


<h4>Kosár lefoglal</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="OrderAdd" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="ReleaseTime" class="control-label"></label>
				<input asp-for="ReleaseTime" class="form-control" />
				<span asp-validation-for="ReleaseTime" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Deadline" class="control-label"></label>
				<input asp-for="Deadline" class="form-control" />
				<span asp-validation-for="Deadline" class="text-danger"></span>
			</div>


			<div class="form-group">
				<input type="submit" value="Lefoglal" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>



@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
