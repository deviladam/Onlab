@model Szertar.Dal.Dto.ItemDetails

@{
	ViewData["Title"] = "Új item";
}

<h1>Új eszköz felvétel</h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="ItemAdd" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="control-label">Név</label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Stock" class="control-label">Raktárkészlet</label>
				<input asp-for="Stock" class="form-control" />
				<span asp-validation-for="Stock" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label">Leírás</label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Price" class="control-label">Ár (Ft)</label>
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Activity" class="control-label">Tevékenység</label>
				<input asp-for="Activity" class="form-control" />
				<span asp-validation-for="Activity" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Image" class="control-label">Kép</label>
				<input type="file" id="files" asp-for="Image" class="form-control" />
				
			</div>
			<div class="form-group">
				<input type="submit" value="Felvétel!" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Mégse</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
